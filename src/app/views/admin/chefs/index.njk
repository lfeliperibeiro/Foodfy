{% extends "admin/layout.njk" %}

{% block content %}
    <div class="recipe-title">
        <h1>Gerenciar Chefs</h1>
        <a href="/admin/chefs/create">Criar Chef</a>
    </div>
    <section class="cards">
        {% for chef in chefs %}
            <div class="card">
                <div class="card-content">
                    <img class="avatar-index"src="{{chef.avatar_url}}" alt="{{chef.name}}"/>                    
                </div>
                <div class="card-info">
                    <h1 class="chef-name-index">{{chef.name}}</h1>
                    <p>{{chef.total_recipes}} receitas</p>
                    <a class="view-button" href="/admin/chefs/{{chef.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}

    </section>

{% endblock content %}