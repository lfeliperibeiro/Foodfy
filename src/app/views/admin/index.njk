{% extends "admin/layout.njk" %}

{% block content %}
    <div class="recipe-title">
        <h1>Gerenciar receitas</h1>
        <a href="/admin/recipes/create">Criar Receita</a>
    </div>
    <section class="cards">
        {% for recipe in recipes %}
            <div class="card">
                <div class="card-content">
                    <img src="{{recipe.image}}" alt="{{recipe.name}}"/>
                </div>
                <div class="card-info">
                    <h1>{{recipe.title}}</h1>
                    <p class="card-author"></p>
                    <a class="view-button" href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}

    </section>

{% endblock content %}