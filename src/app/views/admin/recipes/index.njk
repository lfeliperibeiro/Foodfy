{% extends "admin/layout.njk" %}

{% block content %}
    <div class="recipe-title">
        <h1>Gerenciar Receitas</h1>
        <a href="/admin/recipes/create">Nova Receita</a>
    </div>
    <section class="cards">
        {% for recipes in recipes %}
            <div class="card">
                <div class="card-content">
                    <img class="avatar-index"src="{{recipe.image}}" alt="{{recipe.title}}"/>                    
                </div>
                <div class="card-info">
                    <h1 class="chef-name-index">{{recipe.title}}</h1>
                    <p>{{recipe.chef_name}}</p>
                    <a class="view-button" href="/admin/recipe/{{recipe.id}}">Visualizar</a>
                </div>
            </div>
        {% endfor %}

    </section>

{% endblock content %}