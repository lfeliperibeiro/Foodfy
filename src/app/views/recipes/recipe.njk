{% extends 'recipes/layout.njk' %}

{% block head %}
    <title>Foodfy | Receita</title>
{% endblock head %}

{% block content %}

    <section class="recipes">
        <div class="recipe" id="{{recipe.id}}">
            <div class="recipe-content">
                <img src="{{recipe.recipe_url}}" alt="{{recipe.name}}"/>
            </div>
            <div class="recipe-info">
                <h1>{{recipe.name}}</h1>
            </div>
            <div class="recipe-author">
                <p>{{recipe.author}}</p>
            </div>
        </div>
        <div class="recipe-subtitle">
            <h2>Ingredientes</h2>
            <button class="button">ESCONDER</button>
        </div>
        <div class="ingredients">
            {% for ingredient in recipe.ingredients %}
                <li>{{ingredient}}</li>
            {% endfor %}
        </div>

        <div class="recipe-subtitle">
            <h2>Modo de preparo</h2>
            <button class="button1">ESCONDER</button>
        </div>
        <div class="preparation">
            {% for prepare in recipe.prepares %}
                <li>{{prepare}}</li>
            {% endfor %}
        </div>

        <div class="recipe-subtitle">
            <h2>Informações adicionais</h2>
            <button class="button2">ESCONDER</button>
        </div>
        <div class="information ">
            <p>{{recipe.info}}</p>
        </div>

    </section>

{% endblock content %}