{% extends 'recipes/layout.njk' %}
{% block head %}
  <title>Foodfy | Receitas</title>
{% endblock head %}

{% block content %}
  <section class="cards">
    {% for recipe in recipes %}
      <div class="card" id="{{recipe.id}}">
        <div class="card-content">
          <img src="{{recipe.recipe_url}}" alt="{{recipe.name}}"/>
        </div>
        <div class="card-info">
          <h1>{{recipe.name}}</h1>
        </div>
        <div class="card-author">
          <p>{{recipe.author}}</p>
        </div>
      </div>
    {% endfor %}
  </section>

{% endblock content %}

<script src="/script.js"></script>