{% extends 'layout.njk' %}
{% block head %}
  <title>Foodfy | Receitas</title>
{% endblock head %}

{% block content %}
  <section class="cards">
    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="card-content">
          <img src="{{item.image}}" alt="{{item.title}}"/>
        </div>
        <div class="card-info">
          <h1>{{item.title}}</h1>
        </div>
        <div class="card-author">
          <p>{{item.author}}</p>
        </div>
      </div>
    {% endfor %}
  </section>

{% endblock content %}

 <script src="/script.js"></script>
